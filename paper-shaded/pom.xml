<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>wtf.casper.amethyst</groupId>
    <artifactId>paper-shaded</artifactId>
    <version>${amethyst.version}</version>

    <build>
        <finalName>${project.artifactId}-amethyst-${project.version}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>3.2.1</version>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.10.1</version>
                <configuration>
                    <source>17</source>
                    <target>17</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.5.0</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <relocations>
                                <relocation>
                                    <pattern>fr.mrmicky.fastboard</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.fastboard
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.google.gson</pattern>
                                    <shadedPattern>wtf.casper.amethyst.libs.google.gson</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>dev.dejvokep.boostedyaml</pattern>
                                    <shadedPattern>wtf.casper.amethyst.libs.boostedyaml</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.jeff_media.customblockdata
                                    </pattern>
                                    <shadedPattern>wtf.casper.amethyst.libs.customblockdata</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>io.lettuce.core</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.lettuce
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>net.byteflux.libby</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.libby
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>wtf.casper.amethystmenu.inventory
                                    </pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.inventory
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>gg.optimalgames.hologrambridge
                                    </pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.hologrambridge
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.mongodb</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.mongodb
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>reactor</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.reactor
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.reactivestreams</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.reactivestreams
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>redempt.crunch</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.crunch
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.quartz</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.quartz
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.github.benmanes.caffeine
                                    </pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.caffeine
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.reflections</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.reflections
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>javassist</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.javassist
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.iridium.iridiumcolorapi
                                    </pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.iridiumcolorapi
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.zaxxer.hikari</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.hikari
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.mariadb.jdbc</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.mariadb
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>cloud.commandframework</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.cloud.commandframework
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>io.leangen.geantyref</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.geantyref
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.github.retrooper.packetevents
                                    </pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.packetevents.api
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>io.github.retrooper.packetevents
                                    </pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.packetevents.impl
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>net.wesjd.anvilgui</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.anvilgui
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>wtf.casper.storageapi</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.storageapi
                                    </shadedPattern>
                                </relocation>
                            </relocations>
                            <createDependencyReducedPom>false
                            </createDependencyReducedPom>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>


    <properties>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
