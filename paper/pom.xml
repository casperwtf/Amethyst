    <modelVersion>4.0.0</modelVersion>

    <groupId>wtf.casper.amethyst</groupId>
    <artifactId>paper</artifactId>
    <version>${amethyst.version}</version>

    <properties>
        <amethyst.version>2.0.0</amethyst.version>
        <!--        Connector Versions-->
        <holographicdisplays.legacyversion>2.4.9
        </holographicdisplays.legacyversion>
        <holographicdisplays.version>3.0.0</holographicdisplays.version>
        <decentholograms.version>2.7.5</decentholograms.version>
    </properties>


    <build>
        <finalName>${project.artifactId}-amethyst-${project.version}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>3.2.1</version>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.10.1</version>
                <configuration>
                    <source>17</source>
                    <target>17</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.5.0</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <relocations>
                                <relocation>
                                    <pattern>fr.mrmicky.fastboard</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.fastboard
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.google.gson</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.google.gson
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>dev.dejvokep.boostedyaml</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.boostedyaml
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.jeff_media.customblockdata
                                    </pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.customblockdata
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>io.lettuce.core</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.lettuce
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>net.byteflux.libby</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.libby
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>wtf.casper.amethystmenu.inventory
                                    </pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.inventory
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.mongodb</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.mongodb
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>reactor</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.reactor
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.reactivestreams</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.reactivestreams
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>redempt.crunch</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.crunch
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.quartz</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.quartz
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.github.benmanes.caffeine
                                    </pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.caffeine
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.reflections</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.reflections
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>javassist</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.javassist
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.iridium.iridiumcolorapi
                                    </pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.iridiumcolorapi
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.zaxxer.hikari</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.hikari
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>org.mariadb.jdbc</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.mariadb
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>cloud.commandframework</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.cloud.commandframework
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>io.leangen.geantyref</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.geantyref
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.github.retrooper.packetevents
                                    </pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.packetevents.api
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>io.github.retrooper.packetevents
                                    </pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.packetevents.impl
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>net.wesjd.anvilgui</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.anvilgui
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>wtf.casper.storageapi</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.storageapi
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>de.tr7zw.nbtapi</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.nbtapi
                                    </shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>de.tr7zw.nbtinjector</pattern>
                                    <shadedPattern>
                                        wtf.casper.amethyst.libs.nbtinjector
                                    </shadedPattern>
                                </relocation>
                            </relocations>
                            <filters>
                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
<!--                                        <exclude>META-INF/*.SF</exclude>-->
<!--                                        <exclude>META-INF/*.DSA</exclude>-->
<!--                                        <exclude>META-INF/*.RSA</exclude>-->
<!--                                        <exclude>META-INF/**</exclude>-->
                                        <exclude>org/**</exclude>
                                        <exclude>dev/**</exclude>
                                        <exclude>me/**</exclude>
                                        <exclude>reactor/**</exclude>
                                        <exclude>com/google/**</exclude>
                                        <exclude>com/mchange/**</exclude>
                                        <exclude>com/zaxxer/**</exclude>
                                        <exclude>com/github/benmanes/**
                                        </exclude>
                                        <exclude>com/mongodb/**</exclude>
                                        <exclude>io/**</exclude>
                                        <exclude>javax/**</exclude>
                                        <exclude>redempt/**</exclude>
                                        <!--                                        <exclude>wtf/casper/storageapi/**</exclude>-->
                                        <exclude>
                                            wtf/casper/amethyst/libs/google/**
                                        </exclude>
                                        <exclude>
                                            wtf/casper/amethyst/libs/hikari/**
                                        </exclude>
                                        <exclude>
                                            wtf/casper/amethyst/libs/boostedyaml/**
                                        </exclude>
                                        <exclude>
                                            wtf/casper/amethyst/libs/lettuce/**
                                        </exclude>
                                        <exclude>
                                            wtf/casper/amethyst/libs/libby/**
                                        </exclude>
                                        <exclude>
                                            wtf/casper/amethyst/libs/mongodb/**
                                        </exclude>
                                        <!--                                        <exclude>wtf/casper/amethyst/libs/quartz/**</exclude>-->
                                        <exclude>
                                            wtf/casper/amethyst/libs/reflections/**
                                        </exclude>
                                        <exclude>
                                            wtf/casper/amethyst/libs/javassist/**
                                        </exclude>
                                        <exclude>
                                            wtf/casper/amethyst/libs/crunch/**
                                        </exclude>
                                        <exclude>
                                            wtf/casper/amethyst/libs/caffeine/**
                                        </exclude>
                                        <exclude>
                                            wtf/casper/amethyst/libs/fastboard/**
                                        </exclude>
                                        <exclude>
                                            wtf/casper/amethyst/libs/customblockdata/**
                                        </exclude>
                                        <exclude>
                                            wtf/casper/amethyst/libs/inventory/**
                                        </exclude>
                                        <exclude>
                                            wtf/casper/amethyst/libs/reactivestreams/**
                                        </exclude>
                                        <exclude>
                                            wtf/casper/amethyst/libs/reactor/**
                                        </exclude>
                                        <exclude>
                                            wtf/casper/amethyst/libs/iridiumcolorapi/**
                                        </exclude>
                                    </excludes>
                                </filter>
                                <filter>
                                    <artifact>
                                        wtf.casper.amethystmenu.inventory
                                    </artifact>
                                    <excludes>
                                        <exclude>plugin.yml</exclude>
                                    </excludes>
                                </filter>
                            </filters>
                            <createDependencyReducedPom>false</createDependencyReducedPom>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>

